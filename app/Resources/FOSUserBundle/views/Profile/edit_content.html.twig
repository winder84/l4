{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
	<div class="center-block" style="width: 750px;">

		<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(edit_form) }} method="POST" class="fos_user_profile_edit">
			{{ form_start(edit_form) }}
			{{ form_errors(edit_form) }}

			<div class="form-group">
				{{ form_label(edit_form.username, edit_form.username, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(edit_form.email, edit_form.email, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(edit_form.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(edit_form.plainPassword.first, edit_form.plainPassword.first, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(edit_form.plainPassword.second, edit_form.plainPassword.second, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(edit_form.enabled, edit_form.enabled, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
				</div>
			</div>

			<div class="col-sm-10 right" style="margin-top: 20px;">
				{{ form_widget(edit_form.submit, { 'label': 'Сохранить', 'attr': {'class': 'btn btn-success'} }) }}
				<a href="{{ path('admin_users_') }}" class="btn btn-warning">Отмена</a>
			</div>

			{{ form_end(edit_form) }}
		</form>
	</div>
</div>
